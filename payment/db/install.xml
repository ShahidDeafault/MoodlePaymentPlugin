        <FIELD NAME="paid"   			TYPE="varchar" LENGTH="5" NOTNULL="true" SEQUENCE="false" ENUM="false" />
        <FIELD NAME="comments"   		TYPE="varchar" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" />
        <FIELD NAME="studentcomments"   TYPE="varchar" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" />
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>